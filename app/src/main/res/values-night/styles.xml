<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para el action bar -->
    <style name="CustomActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
        <item name="android:fontFamily">@font/crashalike</item>
    </style>

    <!-- Estilo para tÃ­tulos -->
    <style name="CustomTitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/green</item>
        <item name="android:fontFamily">@font/crashalike</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Estilo para los textos -->
    <style name="CustomTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/crashbandicootwumpa</item>
    </style>

    <!-- Estilo para los textos -->
    <style name="CustomTextViewStylePassword" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/crashbandicootwumpa</item>
    </style>
</resources>