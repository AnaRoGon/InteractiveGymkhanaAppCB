<resources xmlns:tools="http://schemas.android.com/tools" xmlns:tool="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pmdm06" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- colores principales -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/bananacrash</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- variante de color de estado -->
        <item name="android:statusBarColor" tool:targetApi="23" >?attr/colorPrimaryVariant</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Se ha sobreescrito la imagen del lanzador para personalizar la app -->
        <item name="android:windowSplashScreenBackground">@color/orange</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    </style>
    <style name="Theme.Pmdm06" parent="Base.Theme.Pmdm06" />
</resources>